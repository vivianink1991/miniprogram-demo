.nav-top {
    position: relative;
    background: #000;
    box-sizing: border-box;
}
.nav-top-inner {
    position: relative;
    height: 100%;
}
.nav-top .title {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: #fff;
    font-size: 15px;
}
.nav-tool {
    position: absolute;
    top: 50%;
    left: 0px;
    transform: translateY(-50%);
    width: 48rpx;
    height: 48rpx;
}
.nav-icon {
    width: 100%;
    height: 100%;
}